---
import Prose from '../components/Prose.astro'
import BaseLayout from './BaseLayout.astro'
import ProjectChip from '../components/ProjectChip.astro'
const { frontmatter } = Astro.props
---

<BaseLayout pageTitle={frontmatter.title} description={frontmatter.description}>
	<Prose>
		<div class="lg:w-2/5">
			<h1 class="text-2xl opacity-65">{frontmatter.title}</h1>
			<h2 class="pt-2 text-5xl">{frontmatter.description}</h2>
			<div class="pt-6">
				{
					frontmatter.tags.map((tag) => (
						<ProjectChip variant="red">
							<div slot="tag">{tag}</div>
						</ProjectChip>
					))
				}
			</div>
			<div slot="tag"></div>
		</div>
		<slot />
	</Prose>
</BaseLayout>
