---
import Prose from '../components/Prose.astro'
import BaseLayout from './BaseLayout.astro'
import ProjectChip from '../components/ProjectChip.astro'
const { frontmatter } = Astro.props
---

<BaseLayout pageTitle={frontmatter.title} description={frontmatter.description}>
	<Prose>
		<div class="pb-24 lg:w-2/5">
			<h1 class="text-2xl opacity-65">{frontmatter.title}</h1>
			<h2 class="pb-4 pt-2 text-5xl">{frontmatter.description}</h2>

			<div class="">
				{
					frontmatter.tags.map((tag) => (
						<ProjectChip>
							<div slot="tag">{tag}</div>
						</ProjectChip>
					))
				}
			</div>
			<div slot="tag"></div>
		</div>
		<slot />
	</Prose>
</BaseLayout>
